# JWT Secret (verplicht - genereer een sterke secret)
JWT_SECRET=your-super-secret-jwt-key-here

# Server Port (optioneel, standaard 4000)
PORT=4000

# Database URL (standaard SQLite)
DATABASE_URL="file:./dev.db"

# SMTP Configuratie (optioneel - kan ook via UI worden ingesteld)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password
SMTP_FROM=your-email@gmail.com

# Frontend URL (voor wachtwoord reset links)
FRONTEND_URL=http://localhost:5173

# Prisma logging (optioneel)
PRISMA_LOG_QUERIES=0
